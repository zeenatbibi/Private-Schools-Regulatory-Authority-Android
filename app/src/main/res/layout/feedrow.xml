<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/dialogopen"
    android:paddingBottom="15dp"
    android:elevation="8dp"
    android:background="@drawable/custom_card">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#049053"
        android:text="User Feedback"
        android:textSize="16sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/cancle_bt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cancel"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/dialog_title"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="13sp"
        android:textColor="#CABBBBBB"
        android:text=" Please give us the feedback about the complaint you have registered." />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_text"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/isyur_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/dialog_title"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:text="Is your complaint resolved?"
            android:textSize="13sp"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/yes_bt"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="Yes"
                android:textSize="10sp"
                android:background="@drawable/linear_bg"
                android:textColor="#CABBBBBB"/>
            <Button
                android:id="@+id/no_bt"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="No"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:background="@drawable/linear_bg"
                android:textColor="#CABBBBBB"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/text_bg"
            android:padding="10dp"
            android:layout_margin="8dp">
            <EditText
                android:id="@+id/feed_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Write your feedback here"
                android:textSize="12sp"
                android:maxLines="8"
                android:gravity="center"
                android:background="@null"/>
        </LinearLayout>
        <Button
            android:id="@+id/submit_bt"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="#049053"/>
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>