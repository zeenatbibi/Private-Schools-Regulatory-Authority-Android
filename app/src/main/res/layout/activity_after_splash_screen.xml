<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.psra.complaintsystem.activities.AfterSplashScreen">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg">


    </RelativeLayout>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/splash_descip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:text="Private Schools Regulatory Autority"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:lineSpacingExtra="8dp"/>
    <TextView
        android:id="@+id/splash_descip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="4dp"
        android:text="Khyper Pakhtunkhwa"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/splash_descip1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:lineSpacingExtra="8dp"/>
    <TextView
        android:id="@+id/otherde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="A Complaint cell resolve the complaint of parents"
        android:layout_below="@+id/splash_descip2"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:textAlignment="center"
       />
    <TextView
        android:id="@+id/otherd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="regarding Private Schools"
        android:layout_below="@+id/otherde"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/card_container"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/otherd2"
        android:layout_alignParentBottom="true"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="Complaint System"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="#034b2b"
                />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    android:textSize="14dp"
    android:text="Please Login to use this App"
    android:textAlignment="center"
    />

